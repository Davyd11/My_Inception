FROM alpine:3.13
LABEL maintainer="dpuente-"

#update packages and install nginx
RUN apk update && apk add --no-cache nginx \
&& apk add --no-cache --upgrade bash \
&& apk add openssl && mkdir -p var/run/nginx \
&& rm -rf /var/cache/apk/*


RUN wget http://wordpress.org/latest.tar.gz\
&& tar -xzvf latest.tar.gz && rm latest.tar.gz\
&& mv wordpress/* /var/www/localhost/htdocs/ \
&& rm -f latest.tar.gz\
&& rm -rf /var/cache/apk/*


# create user for nginx && generate nginx folder && add permissions
#RUN adduser -D -g 'www' www \
#&& chown -R www:www /var/lib/nginx \
#&& chown -R www:www /www
#####chmod -R 755 app/storage

RUN chmod -R 755 /var/www/localhost/htdocs/
RUN chmod -R 755 /var/www/localhost/htdocs/index.php
RUN chown -R nginx:nginx /var/www/localhost/htdocs


#copy configuration into container
#RUN	rm -rf /etc/nginx.conf
COPY ./srcs/nginx-conf ./etc/nginx/conf.d/default.conf

#SSl
RUN chmod 777 /etc/ssl/certs && \
	openssl req -x509 -nodes -days 365 \
    -newkey rsa:2048 -subj "/C=SP/ST=Spain/L=Madrid/O=42/CN=localhost" \
    -out /etc/ssl/certs/nginx-selfsigned.crt \
    -keyout /etc/ssl/certs/nginx-selfsigned.key

#COPY srcs/start.sh ./
#RUN chmod +x ./start.sh

#EXPOSE 80 443
#CMD ./start.sh
CMD ["nginx", "-g", "daemon off;"]